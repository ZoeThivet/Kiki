<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zo.kiki.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="95dp"
        android:maxHeight="95dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="30dp"
        android:src="@drawable/kiki"
        android:id="@+id/imageView1"
        android:layout_centerHorizontal="true" />
    <!--app:srcCompat="@drawable/kiki"-->
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_above="@+id/ca_me_deplait"
        android:layout_below="@+id/imageView1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_kiki"
            android:gravity="start"
            android:textSize="20sp"
            android:id="@+id/text1"
             />
    </ScrollView>


    <Button
        android:text="Ca me déplaît"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ca_me_deplait"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>